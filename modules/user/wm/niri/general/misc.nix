{
  programs.niri.settings = {
    # Path to save screenshots and naming scheme
    screenshot-path = "~/Pictures/Screenshots/Screenshot from %Y-%m-%d %H-%M-%S.png";

    # Deactivate hotkey overlay at startup
    hotkey-overlay.skip-at-startup = true;

    # Turn off client-side decorations (titlebars) where possible
    prefer-no-csd = true;
  };
}
